var levelArr = ["1","2"];
var level = levelArr[Math.floor(Math.random() * levelArr.length)];
console.log(level);
if (level == "1"){


var firstArr = ["1","2","3","4","5","6","7","8","9"];

var first = firstArr[Math.floor(Math.random() * firstArr.length)];
var secondArr = ["1","2","3","4","5","6","7","8","9"];
var second = secondArr[Math.floor(Math.random() * secondArr.length)];
var thirdArr = ["+","-","*","/"]
var third = thirdArr[Math.floor(Math.random() * thirdArr.length)];

var expression;
if (third == "+"){

expression = first + third + second
document.getElementById("qn").innerHTML = expression;
function go(){

var ansr = eval(expression);

if (document.getElementById("ans").value == ansr){

alert("Correct! Great job!");
location.reload();

} else if (document.getElementById("ans").value !== ansr){

alert("Wrong! The correct answer is " + ansr);
location.reload();

}

}
}

if (third == "-"){

expression = first + third + second
document.getElementById("qn").innerHTML = expression;

